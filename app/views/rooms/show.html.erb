<p id="notice"><%= notice %></p>
<%= link_to 'Reviews', reviews_path %>
<%= link_to 'Home page', root_path %>
<h2>Room</h2>
<p>
  <strong>Number:</strong>
  <%= @room.number %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @room.price %>
  <strong>rub</strong>
</p>

<% if @room.attachments? %>
    <% @room.attachments.each do |attachment| %>
      <%= link_to(image_tag(attachment.small_thumb.url, alt: 'Image'), attachment.url, target: '_blank') %>
    <% end %>
<% end %>

<h2>Book</h2>
<%= form_with model: [ @room, @room.reservations.build ] do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </p>
  <p>
    <%= form.label :checkin_date %><br>
    <%= form.date_field :checkin_date %>
  </p>
  <p>
    <%= form.label :checkout_date %><br>
    <%= form.date_field :checkout_date %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>



<%= link_to 'Back', rooms_path %>
