<p id="notice"><%= notice %></p>
<%= link_to 'Rooms', admin_rooms_path %>
<%= link_to 'Reservations', admin_reservations_path %>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Email</th>
      <th>Review body</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.author %></td>
        <td><%= review.email %></td>
        <td><%= review.review_body %></td>
        <td><%= review.confirmed %></td>

        <td><%= link_to 'Edit', edit_admin_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


