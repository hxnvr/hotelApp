<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2>All fields must be filled in</h2>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :review_body %>
    <%= form.text_area :review_body %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
